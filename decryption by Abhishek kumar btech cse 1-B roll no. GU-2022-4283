#include<iostream>
using namespace std;

int main()
{
	char message[200];
	char ch;
	int i, key;
	cout << "Enter a message to decrypt: ";
	cin.getline(message, 200);
	cout << "Enter key: ";
	cin >> key;
	for(i = 0; message[i] != '\0'; ++i){
		ch = message[i];
		if (ch >= 'a' && ch <= 'z'){
			ch = ch - key;
			if(ch < 'a'){
				ch = ch + 'z' - 'a' + 1;					
				}
	      message[i] = ch;
	    	}
		else if (ch >= 'A' && ch <= 'Z'){
			ch = ch - key;
			if (ch > 'a'){
				ch = ch + 'Z' - 'A' + 1;
			}
		message[i] = ch;	
		} 
		}
		cout << "Decrypted message: " <<  message;
		return 0;
	}
	
